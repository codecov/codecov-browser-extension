{
  "compilerOptions": {
    "strict": true,
    "module": "esnext",
    "target": "esnext",
    "esModuleInterop": true,
    "sourceMap": false,
    "baseUrl": "./",
    "paths": {
      "src/*": [
        "./src/*"
      ],
    },
    "rootDir": "src",
    "outDir": "dist/js",
    "noEmitOnError": true,
    "jsx": "react",
    "typeRoots": ["node_modules/@types"],
    "moduleResolution": "bundler"
  }
}
